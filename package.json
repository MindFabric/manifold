{
  "name": "claude-sidebar",
  "version": "1.0.0",
  "description": "Claude Code Sidebar - Cross-platform workspace manager for Claude Code",
  "main": "main.js",
  "scripts": {
    "postinstall": "electron-rebuild",
    "start": "electron . --no-sandbox",
    "dev": "electron . --no-sandbox",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder -mwl"
  },
  "keywords": [
    "claude",
    "terminal",
    "workspace"
  ],
  "author": "Claude Sidebar",
  "license": "MIT",
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "com.claude.sidebar",
    "productName": "Claude Sidebar",
    "files": [
      "main.js",
      "journal.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "node_modules/@xterm/**/*",
      "node_modules/node-pty/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png",
      "hardenedRuntime": false
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}
