{
  "name": "manifold",
  "version": "1.0.1",
  "description": "Manifold â€” workspace manager for Claude Code",
  "main": "main.js",
  "scripts": {
    "preinstall": "node scripts/check-deps.js",
    "postinstall": "electron-rebuild",
    "start": "electron . --no-sandbox --ozone-platform-hint=auto --enable-features=WaylandWindowDecorations,UseOzonePlatform --enable-gpu-rasterization --enable-zero-copy",
    "dev": "electron . --no-sandbox --ozone-platform-hint=auto --enable-features=WaylandWindowDecorations,UseOzonePlatform --enable-gpu-rasterization --enable-zero-copy",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder -mwl"
  },
  "keywords": [
    "claude",
    "terminal",
    "workspace"
  ],
  "author": {
    "name": "Manifold",
    "email": "manifold@users.noreply.github.com"
  },
  "license": "MIT",
  "dependencies": {
    "@xterm/addon-canvas": "^0.7.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/addon-webgl": "^0.18.0",
    "@xterm/xterm": "^5.5.0",
    "node-pty": "^1.0.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.7.2",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "ai.manifold.app",
    "productName": "Manifold",
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "styles.css",
      "icon.png",
      "node_modules/@xterm/**/*",
      "node_modules/node-pty/**/*"
    ],
    "linux": {
      "target": [
        "deb"
      ],
      "category": "Development",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.developer-tools",
      "icon": "assets/icon.png",
      "identity": null
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowToChangeInstallationDirectory": false
    }
  }
}
